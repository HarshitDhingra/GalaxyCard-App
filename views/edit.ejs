<% include ./partials/header %>

<div class ="eventbox" id="event_box1">

<div class="ui main text container segment">
    <div class="ui huge header">New Event</div>
    <form class="ui form" action="/events/<%= event._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input onkeydown="return event.key != 'Enter';" type="text" name="event[title]" value=<%= event.title %> >
        </div>
        <div class="field">
            <label>User</label>
            <input onkeydown="return event.key != 'Enter';" type="text" name="event[owner]" value=<%= event.owner %> >
        </div>
        <div class="field">
            <label>Image</label>
            <input onkeydown="return event.key != 'Enter';" type="text" name="event[image]" value=<%= event.image %>>
        </div>
        <div class="field">
            <label>event Content</label>
            <textarea name="event[body]"><%= event.body %></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>

</div>

<% include ./partials/footer %>